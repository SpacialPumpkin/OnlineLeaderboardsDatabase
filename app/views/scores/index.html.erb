<p id="notice"><%= notice %></p>

<h1>High Score Leaderboard</h1>

<table>
  <thead>
    <tr>
      <th>GameID</th>
      <th>Name</th>
      <th>Points</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.gameID %></td>
        <td><%= score.name %></td>
        <td><%= score.points %></td>
        <td><%= score.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'Show', score %></td>
          <% if current_user && current_user.is_admin? %>
          <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Score', new_score_path %>
